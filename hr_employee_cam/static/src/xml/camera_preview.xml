<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="CameraPreviewTemplate">
        <div aria-hidden="false" class="camera_modal modal fade" role="dialog" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content openerp">
                    <div class="modal-header">
                        <button aria-hidden="true" class="close" data-dismiss="modal" data-action="cancel" type="button">×</button>
                        <h3 class="modal-title">Tomar fotografía</h3>
                    </div>
                    <div class="modal-body oe_act_window">
                        <video id="hr_camera"></video>
                    </div>
                    <div class="modal-footer">
                        <button class="oe_button oe_highlight" type="button" data-action="capture">Capturar</button>
                        <button class="oe_button oe_highlight" type="button" data-action="cancel">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>